<EditForm Model="@brand" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="brand.Name" class="form-control" />
                <ValidationMessage For="@( () => brand.Name)" />
            </div>

        </div>

        <div class="form-group">
            <label>Description: </label>
            <div>
                <InputText @bind-Value="brand.Description" class="form-control" />
                <ValidationMessage For="@( () => brand.Description)" />
            </div>
        </div>

        @*<div class="form-group">
            <label>Categories: </label>
            <div>
                <InputSelect @bind-Value="brand.BrandCategoryId" class="form-control">
                    @if (Brands != null)
                    {
                        <option value="">--- Select a Brand ---</option>
                        foreach (var brand in Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }
                    }
                </InputSelect>
                <ValidationMessage For="@( () => brand.BrandCategoryId)" />
            </div>
        </div>*@
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="brands" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Brand brand { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}

