<EditForm Model="@brand" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="brand.Name" class="form-control" />
            <ValidationMessage For="@( () => brand.Name)" />
        </div>

    </div>

    <div class="form-group">
        <label>Description: </label>
        <div>
            <InputText @bind-Value="brand.Description" class="form-control" />
            <ValidationMessage For="@( () => brand.Description)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-block">
        Submit Brand
    </button>
</EditForm>

@code {
    [Parameter] public Brand brand { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}

